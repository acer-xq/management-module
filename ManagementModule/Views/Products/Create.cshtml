@using ManagementModule.EntityModel
@model Product

@{
    ViewData["Title"] = "Create";
}

<h1>Create Product</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="input-group mb-3">
                <label asp-for="Name" class="input-group-text"></label>
                <input asp-for="Name" class="form-control" placeholder="Product name"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="input-group mb-3">
                <label asp-for="Description" class="input-group-text"></label>
                <input asp-for="Description" class="form-control" placeholder="Product description" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="input-group mb-3">
                <label asp-for="Price" class="input-group-text"></label>
                <input asp-for="Price" class="form-control" placeholder="0.00" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="input-group mb-3">
                <label asp-for="Stock" class="input-group-text"></label>
                <input asp-for="Stock" class="form-control" placeholder="0" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>
            <div class="input-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input fs-7" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                </label>
            </div>
            <div>
                <input class="btn btn-primary me-3" type="submit" value="Create" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>

            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
